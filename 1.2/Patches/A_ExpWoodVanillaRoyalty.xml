<?xml version="1.0" encoding="utf-8"?>
<Patch>
	<Operation Class="PatchOperationFindMod">
		<mods>
			<li>Royalty</li>
		</mods>
		<match Class="PatchOperationSequence">
			<success>Always</success>
			<operations>

				<!-- Joy/Recreation -->
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "Harp"]/costList</xpath>
					<value>
						<stuffCategories>
							<li>Woody</li>
						</stuffCategories>
						<costStuffCount>150</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationReplace">
					<xpath>Defs/ThingDef[defName = "Harpsichord"]/costList</xpath>
					<value>
						<stuffCategories>
							<li>Woody</li>
						</stuffCategories>
						<costStuffCount>250</costStuffCount>
					</value>
				</li>
				<li Class="PatchOperationRemove">
					<xpath>Defs/ThingDef[defName = "Piano"]/costList/WoodLog</xpath>
				</li>
				<li Class="PatchOperationAdd">
					<xpath>Defs/ThingDef[defName = "Piano"]</xpath>
					<value>
						<stuffCategories>
							<li>Woody</li>
						</stuffCategories>
						<costStuffCount>220</costStuffCount>
					</value>
				</li>

			</operations>
		</match>
	</Operation>
</Patch>

<RecipeDefs>
	
<!-- Abstracts -->	
	
	<RecipeDef Name="MakeWoodLumberBase" Abstract="True">
		<jobString>Processing lumber from wood.</jobString>
		<workAmount>500</workAmount>
		<workSpeedStat>StonecuttingSpeed</workSpeedStat>
		<workSkill>Crafting</workSkill>
		<workSkillLearnFactor>0.25</workSkillLearnFactor>
		<effectWorking>CutStone</effectWorking>
		<soundWorking>Recipe_MakeStoneBlocks</soundWorking>
		<targetCountAdjustment>15</targetCountAdjustment>
	</RecipeDef>

<!-- Lumber -->		
	
	<RecipeDef ParentName="MakeWoodLumberBase">
		<defName>MakeWoodLumberAny</defName>
		<label>Make any lumber</label>
		<description>Process raw logs into lumber for construction.</description>
		<workerCounterClass>ExpandedWoodworking.RecipeWorkerCounter_MakeWoodLumber</workerCounterClass>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>WoodTypes</li>
					</categories>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>WoodTypes</li>
			</categories>
		</fixedIngredientFilter>
		<specialProducts>
			<li>Butchery</li>
		</specialProducts>
		<recipeUsers>
			<li>TableWoodworking</li>
		</recipeUsers>		
	</RecipeDef>

	<RecipeDef ParentName="MakeWoodLumberBase">
		<defName>MakeWoodLumberMixed</defName>
		<label>Make mixed lumber</label>
		<description>Process any random or spare raw logs into lumber for construction.</description>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>WoodTypes</li>
					</categories>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>WoodTypes</li>
			</categories>
		</fixedIngredientFilter>
		<products>
			<WoodLog>30</WoodLog>
		</products>
		<recipeUsers>
			<li>TableWoodworking</li>
		</recipeUsers>
	</RecipeDef>
	
	<RecipeDef ParentName="MakeWoodLumberBase">
		<defName>MakeWoodLumberMixedBundle</defName>
		<label>Bundle lumber together</label>
		<description>Bundle together random or spare pieces of lumber.</description>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>WoodLumber</li>
					</categories>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>WoodLumber</li>
			</categories>
		</fixedIngredientFilter>
		<products>
			<WoodLog>15</WoodLog>
		</products>
		<recipeUsers>
			<li>TableWoodworking</li>
		</recipeUsers>
	</RecipeDef>	
	
	<RecipeDef ParentName="MakeWoodLumberBase">
		<defName>MakeWoodLumberMixedHand</defName>
		<label>Make lumber by hand</label>
		<description>Process any random or spare raw logs into lumber for construction by hand. It's a tedious job.</description>
		<workAmount>750</workAmount>
		<allowMixingIngredients>true</allowMixingIngredients>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>WoodTypes</li>
					</categories>
				</filter>
				<count>15</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>WoodTypes</li>
			</categories>
		</fixedIngredientFilter>
		<products>
			<WoodLog>30</WoodLog>
		</products>
		<recipeUsers>
			<li>CraftingSpot</li>
		</recipeUsers>
	</RecipeDef>
	
<!-- Chemfuel -->

	<RecipeDef>
		<defName>MakeChemfuelFromWood</defName>
		<label>make chemfuel from wood</label>
		<description>Make a batch of chemfuel by gasifying wood logs.</description>
		<jobString>Refining chemfuel from wood.</jobString>
		<effectWorking>Cremate</effectWorking>
		<soundWorking>Recipe_Cremate</soundWorking>
		<workAmount>2000</workAmount>
		<ingredients>
			<li>
				<filter>
					<categories>
						<li>WoodTypes</li>
					</categories>
				</filter>
				<count>70</count>
			</li>
		</ingredients>
		<fixedIngredientFilter>
			<categories>
				<li>WoodTypes</li>
			</categories>
		</fixedIngredientFilter>
		<products>
			<Chemfuel>35</Chemfuel>
		</products>
		<workSkill>Crafting</workSkill>
	</RecipeDef>	

</RecipeDefs>